<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="appearance"
        app:title="Appearance" />

    <ListPreference
        app:key="theme"
        app:title="Theme"
        app:entries="@array/Theme"
        app:entryValues="@array/ThemeValues"
        app:summary=""/>

    <PreferenceCategory
        app:key="backup"
        app:title="Backup" />


    <Preference
        app:key="backup_database"
        app:title="Export Database"
        app:summary="Export a backup of the food database"
        />

    <Preference
        app:key="import_database"
        app:title="Import Database"
        app:summary="Import food database from a backup"
        />

</PreferenceScreen>
